{
  "name": "express-api-template",
  "version": "1.0.0",
  "description": "Project template to create an Express API server.",
  "main": "server.js",
  "scripts": {
    "start": "node ./server.js",
    "build": "babel ./src/index.js -o server.js",
    "dev": "babel-watch ./src/index.js",
    "test": "jest --watch",
    "flow-start": "flow start",
    "flow-stop": "flow stop",
    "flow-status": "flow status",
    "flow-coverage": "flow coverage",
    "lint": "eslint ./src --ext .js",
    "lint-fix": "eslint ./src --ext .js --fix",
    "clean": "rm -f ./server.js"
  },
  "keywords": [
    "express",
    "api",
    "server"
  ],
  "author": "Joe Justesen",
  "license": "MIT",
  "dependencies": {
    "express": "^4.16.3"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.6",
    "babel-jest": "^23.4.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-flow": "^6.23.0",
    "babel-watch": "^2.0.7",
    "eslint": "^5.2.0",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-plugin-import": "^2.13.0",
    "flow-bin": "^0.77.0",
    "jest": "^23.4.1"
  }
}

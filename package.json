{
  "name": "express-api-template",
  "version": "1.0.0",
  "description": "Project template to create an Express API server.",
  "main": "server.js",
  "scripts": {
    "start": "node ./dist/server.js",
    "build": "babel src --out-dir dist --source-maps",
    "dev": "babel-watch ./src/server.js",
    "test": "jest",
    "test-watch": "jest --watch",
    "test-coverage": "jest --coverage",
    "flow-start": "flow start",
    "flow-stop": "flow stop",
    "flow-status": "flow status",
    "flow-coverage": "flow coverage",
    "lint": "eslint src --ext .js",
    "lint-fix": "eslint src --ext .js --fix",
    "clean": "rimraf ./dist"
  },
  "keywords": [
    "express",
    "api",
    "server"
  ],
  "author": "Joe Justesen",
  "license": "MIT",
  "dependencies": {
    "express": "^4.16.3",
    "express-async-handler": "^1.1.3",
    "express-winston": "^2.6.0",
    "request": "^2.87.0",
    "request-promise-native": "^1.0.5",
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.6",
    "babel-jest": "^23.4.0",
    "babel-minify": "^0.4.3",
    "babel-plugin-inline-json": "^1.2.2",
    "babel-preset-env": "^1.7.0",
    "babel-preset-flow": "^6.23.0",
    "babel-watch": "^2.0.7",
    "eslint": "^5.2.0",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jest": "^21.18.0",
    "flow-bin": "^0.77.0",
    "jest": "^23.4.1",
    "rimraf": "^2.6.2"
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "moduleFileExtensions": [
      "js"
    ],
    "moduleDirectores": [
      "src"
    ]
  }
}
